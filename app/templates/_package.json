{
  "name": "<%= projectName %>",
  "version": "0.0.0",
  "description": "<%= description %>",
  "license": "MIT",
  "repository": "https://github.com/<%= githubUsername %>/<%= projectName %>",
  "author": {
    "name": "<%= name %>",
    "email": "<%= email %>",
    "url": "<%= website %>"
  },
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "precommit": "remove-lockfiles && lint-staged",<% if (esnext) { %>
    "prebuild": "rimraf dist",
    "build": "babel --copy-files --out-dir dist --ignore *.test.js src",<% } %>
    "test": "xo && jest"
  },<% if (esnext) { %>
  "main": "dist/index.js",
  "files": [
    "dist"
  ],<% } else { %>
  "files": [
    "index.js"
  ],<% } %>
  "dependencies": {},
  "devDependencies": {<% if (esnext) { %>
    "babel-cli": "^6.26.0",
    "babel-jest": "^20.0.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.6.0",<% } %>
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.3",
    "prettier": "^1.5.3",
    "remove-lockfiles": "^1.1.1"<% if (esnext) { %>,
    "rimraf": "^2.6.1"<% } %>,
    "xo": "^0.18.2"
  },
  "jest": {
    "testEnvironment": "node"<% if (coverage) { %>,
    "collectCoverage": true<% } %><% if (esnext) { %>,
    "collectCoverageFrom": [
      "src/**/*.js"
    ]<% } %>
  },
  "lint-staged": {<% if (esnext) { %>
    "src/**/*.js": [<% } else { %>"*.js": [<% } %>
      "prettier --trailing-comma es5 --single-quote --write",
      "xo --fix",
      "git add"
    ]
  },
  "xo": {
    "space": true,
    "envs": [
      "jest"
    ]
  },
  "keywords": []
}
