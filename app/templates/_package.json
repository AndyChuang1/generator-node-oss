{
  "name": "<%= projectName %>",
  "version": "0.0.0",
  "description": "<%= description %>",
  "license": "MIT",
  "repository": "https://github.com/<%= githubUsername %>/<%= projectName %>",
  "author": {
    "name": "<%= name %>",
    "email": "<%= email %>",
    "url": "<%= website %>"
  },
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "precommit": "remove-lockfiles && xo --fix<% if (prettier) { %> && lint-staged<% } %>",<% if (esnext) { %>
    "prebuild": "rimraf dist",
    "build": "babel --copy-files --out-dir dist --ignore *.test.js src",<% } %>
    "test": "xo && jest"
  },<% if (esnext) { %>
  "main": "dist/index.js",
  "files": [
    "dist"
  ],<% } else { %>
  "files": [
    "index.js"
  ],<% } %>
  "dependencies": {},
  "devDependencies": {<% if (esnext) { %>
    "babel-cli": "^6.26.0",
    "babel-jest": "^20.0.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.6.0",<% } %><% if (prettier) { %>
    "eslint-config-prettier": "^2.3.0",<% } %>
    "husky": "^0.14.3",
    "jest": "^20.0.4",<% if (prettier) { %>
    "lint-staged": "^4.0.4",
    "prettier": "^1.6.1",<% } %>
    "remove-lockfiles": "^1.1.1",<% if (esnext) { %>
    "rimraf": "^2.6.1",<% } %>
    "xo": "^0.18.2"
  },
  "jest": {
    "testEnvironment": "node"<% if (coverage) { %>,
    "collectCoverage": true<% } %><% if (esnext) { %>,
    "collectCoverageFrom": [
      "src/**/*.js"
    ]<% } %>
  },<% if (prettier) { %>
  "lint-staged": {
    "<% if (esnext) { %>src/**/*.js<% } else {%>*.js<% } %>": [
      "prettier --single-quote --trailing-comma es5 --write",
      "git add"
    ]
  },<% } %>
  "xo": {<% if (prettier) { %>
    "extends": "prettier",<% } else { %>
    "space": true,<% } %>
    "envs": [
      "jest"
    ]
  },
  "keywords": []
}
