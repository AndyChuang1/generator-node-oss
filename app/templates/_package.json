{
  "name": "<%= projectName %>",
  "version": "0.0.0",
  "description": "<%= description %>",
  "license": "MIT",
  "repository": "https://github.com/<%= githubUsername %>/<%= projectName %>",
  "author": {
    "name": "<%= name %>",
    "email": "<%= email %>",
    "url": "<%= website %>"
  },
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "precommit": "remove-lockfiles<% if (prettier) { %> && xo --fix && lint-staged<% } %>",<% if (esnext) { %>
    "prebuild": "rimraf dist",
    "build": "babel src --out-dir dist --copy-files --ignore *.test.js",<% } %>
    "lint": "xo",
    "test:watch": "jest --watch",
    "test": "jest<% if (coverage) { %> --coverage<% } %>"
  },<% if (esnext) { %>
  "main": "dist/index.js",<% } %>
  "files": [
    "<% if (esnext) { %>dist<% } else { %>index.js<% } %>"
  ],
  "dependencies": {},
  "devDependencies": {<% if (esnext) { %>
    "babel-cli": "^6.26.0",
    "babel-jest": "^22.0.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.6.1",<% } %><% if (prettier) { %>
    "eslint-config-prettier": "^2.9.0",<% } %>
    "husky": "^0.14.3",
    "jest": "^22.0.4",<% if (prettier) { %>
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.2",<% } %>
    "remove-lockfiles": "^2.0.4",<% if (esnext) { %>
    "rimraf": "^2.6.2",<% } %>
    "xo": "^0.18.2"
  },
  "jest": {
    "testEnvironment": "node"<% if (esnext) { %>,
    "collectCoverageFrom": [
      "src/**/*.js"
    ]<% } %>
  },<% if (prettier) { %>
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": <% if (esnext) { %>"all"<% } else { %>"es5"<% } %>
  },<% } %>
  "xo": {<% if (prettier) { %>
    "extends": "prettier",<% } else { %>
    "space": true,<% } %>
    "envs": [
      "jest"
    ]
  },
  "keywords": []
}
