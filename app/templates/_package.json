{
  "name": "<%= projectName %>",
  "version": "0.0.0",
  "description": "<%= description %>",
  "license": "MIT",
  "repository": "https://github.com/<%= githubUsername %>/<%= projectName %>",
  "author": {
    "name": "<%= name %>",
    "email": "<%= email %>",
    "url": "<%= website %>"
  },
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "precommit": "remove-lockfiles<% if (prettier) { %> && xo --fix && lint-staged<% } %>",<% if (esnext) { %>
    "prebuild": "rimraf dist",
    "build": "babel src --out-dir dist --copy-files --ignore *.test.js",<% } %>
    "test": "xo && jest"
  },<% if (esnext) { %>
  "main": "dist/index.js",<% } %>
  "files": [
    "<% if (esnext) { %>dist<% } else { %>index.js<% } %>"
  ],
  "dependencies": {},
  "devDependencies": {<% if (esnext) { %>
    "babel-cli": "^6.26.0",
    "babel-jest": "^21.0.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.6.0",<% } %><% if (prettier) { %>
    "eslint-config-prettier": "^2.5.0",<% } %>
    "husky": "^0.14.3",
    "jest": "^21.1.0",<% if (prettier) { %>
    "lint-staged": "^4.2.1",
    "prettier": "^1.7.0",<% } %>
    "remove-lockfiles": "^1.4.0",<% if (esnext) { %>
    "rimraf": "^2.6.2",<% } %>
    "xo": "^0.18.2"
  },
  "jest": {
    "testEnvironment": "node"<% if (coverage) { %>,
    "collectCoverage": true<% if (esnext) { %>,
    "collectCoverageFrom": [
      "src/**/*.js"
    ]<% } %><% } %>
  },<% if (prettier) { %>
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --trailing-comma <% if (esnext) { %>all<% } else { %>es5<% } %> --write",
      "git add"
    ]
  },<% } %>
  "xo": {<% if (prettier) { %>
    "extends": "prettier",<% } else { %>
    "space": true,<% } %>
    "envs": [
      "jest"
    ]
  },
  "keywords": []
}
