{
  "name": "<%= projectName %>",
  "version": "0.0.0",
  "description": "<%= description %>",
  "license": "MIT",
  "repository": "https://github.com/<%= githubUsername %>/<%= projectName %>",
  "author": {
    "name": "<%= name %>",
    "email": "<%= email %>",
    "url": "<%= website %>"
  },
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "precommit": "remove-lockfiles && lint-staged",<% if (esnext) { %>
    "prebuild": "rimraf dist",
    "build": "babel src --out-dir dist --copy-files --ignore *.test.js",<% } %>
    "test:watch": "jest --watch",
    "test": "xo && jest<% if (coverage) { %> --coverage<% } %>"
  },<% if (esnext) { %>
  "main": "dist/index.js",<% } %>
  "files": [
    "<% if (esnext) { %>dist<% } else { %>index.js<% } %>"
  ],
  "dependencies": {},
  "devDependencies": {<% if (!esnext) { %>
    "async-to-gen": "^1.3.3",<% } %><% if (esnext) { %>
    "babel-cli": "^6.26.0",
    "babel-jest": "^22.0.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.6.1",<% } %>
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "lint-staged": "^7.0.0",
    "remove-lockfiles": "^2.0.4",<% if (esnext) { %>
    "rimraf": "^2.6.2",<% } %>
    "xo": "^0.20.3"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "<% if (esnext) { %>babel-jest<% } else { %>async-to-gen<% } %>"
    }<% if (esnext) { %>,
    "collectCoverageFrom": [
      "src/**/*.js"
    ]<% } %>
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": true
  },
  "xo": {
    "envs": [
      "jest"
    ],
    "prettier": true,
    "space": true
  },
  "keywords": []
}
